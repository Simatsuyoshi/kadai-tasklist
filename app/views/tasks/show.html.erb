<h1 class="text-center">id: <%= @task.id %>の詳細ページ</h1>


<p class="text-center"><%= @task.content %></p>
<p class="text-center"><%= @task.status %></p>
<div class="row">
  <div class=" col-sm-6 offset-sm-3">
    <div class="text-center mb-2">
      <%= link_to 'このタスクを削除する',@task,method: :delete, data:{ confirm: '本当に削除してよろしいですか？' } ,class:'btn btn-danger'%>
    </div>    
    <div class="text-center">
      <%= link_to 'このタスクを編集する',edit_task_path(@task),class:'btn btn-light' %> 
    </div>
  </div>
    <div class="text-center mb-2">
      <%= link_to '一覧に戻る', tasks_path ,class: 'btn btn-secondary'%>
     
    </div>
</div>


