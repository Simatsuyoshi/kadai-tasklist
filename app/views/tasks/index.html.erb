  <h1>タスク一覧</h1>
  
  <table class="table table-bordered">
    <thead>
      <tr class="text-center">
        <th>id</th>
        <th>コンテンツ</th>
        <th>ステータス</th>
      </tr>
    </thead>
    <tbody>
      <% @tasks.each do |task| %>
        <tr class="text-center">
          <td><%= link_to task.id,task_path(task) %></td>
          <td><%= task.content %></td>
          <td><%= task.status %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  
  <%= link_to '新規タスクの追加', new_task_path, class: 'btn btn-lg btn-primary' %>
